{
  "ConnectionStrings": {
    "DefaultConnection": "Host=localhost;Port=5432;Database=Flights;Username=postgres;Password=postgres;Include Error Detail"
  },
  "Serilog": {
    "MinimumLevel": {
      "Default": "Information"
    },
    "WriteTo": [
      {
        "Name": "Console"
      },
      {
        "Name": "File",
        "Args": {
          "path": "log.txt",
          "rollingInterval": "Day"
        }
      }
    ]
  },
  "AllowedHosts": "*"
}
